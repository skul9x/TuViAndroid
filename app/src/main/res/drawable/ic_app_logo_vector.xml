<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Background: Deep Mystic Purple Radial Gradient -->
    <path
        android:pathData="M54,54m-54,0a54,54 0 1,1 108,0a54,54 0 1,1 -108,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="54"
                android:type="radial">
                <item android:offset="0.0" android:color="#FF4A148C" />
                <item android:offset="0.7" android:color="#FF311B92" />
                <item android:offset="1.0" android:color="#FF1A237E" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Outer Gold Ring (The Universe) -->
    <path
        android:fillColor="#00000000"
        android:strokeColor="#FFD700"
        android:strokeWidth="1.5"
        android:pathData="M54,54m-50,0a50,50 0 1,1 100,0a50,50 0 1,1 -100,0"/>

    <!-- Concentric Ring (The Moral Layer) -->
    <path
        android:fillColor="#00000000"
        android:strokeColor="#FFA000"
        android:strokeWidth="0.8"
        android:pathData="M54,54m-42,0a42,42 0 1,1 84,0a42,42 0 1,1 -84,0"/>

    <!-- 12 Zodiac Ticks (Dia Chi) - Represented by geometric rays -->
    <group android:pivotX="54" android:pivotY="54">
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" /> <!-- 12 -->
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="30" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="60" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="90" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="120" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="150" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="180" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="210" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="240" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="270" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="300" />
        <path
            android:fillColor="#FFD700"
            android:pathData="M53,6 L55,6 L54,14 Z" 
            android:rotation="330" />
    </group>

    <!-- Center: 8-Pointed Star (Bagua/Mystic Star) -->
    <!-- Creating a complex star shape -->
    <path
        android:fillColor="#FFECB3"
        android:pathData="M54,20 L58,45 L83,45 L62,60 L70,85 L54,70 L38,85 L46,60 L25,45 L50,45 Z"/>
        
    <!-- Core Gem (The Self) -->
    <path
        android:fillColor="#FFD700"
        android:pathData="M54,54m-8,0a8,8 0 1,1 16,0a8,8 0 1,1 -16,0"/>

</vector>
